<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="112dp"
        android:layout_marginBottom="31dp"
        android:src="@drawable/touxiang1"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toTopOf="@+id/MyF_textView_qq"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/MyF_switch_msgsound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:text="消息提示  "
        app:layout_constraintBottom_toTopOf="@+id/MyF_switch_"
        app:layout_constraintStart_toStartOf="@+id/MyF_switch_showQQ"
        app:layout_constraintTop_toBottomOf="@+id/MyF_switch_showQQ" />

    <Switch
        android:id="@+id/MyF_switch_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="130dp"
        android:text="震动           "
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintStart_toStartOf="@+id/MyF_switch_msgsound"
        app:layout_constraintTop_toBottomOf="@+id/MyF_switch_msgsound" />

    <Switch
        android:id="@+id/MyF_switch_showQQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:text="显示QQ号  "
        app:layout_constraintBottom_toTopOf="@+id/MyF_switch_msgsound"
        app:layout_constraintStart_toStartOf="@+id/MyF_textView_qq"
        app:layout_constraintTop_toBottomOf="@+id/MyF_textView_qq" />

    <TextView
        android:id="@+id/MyF_textView_qq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="63dp"
        android:text="1204799167"
        app:layout_constraintBottom_toTopOf="@+id/MyF_switch_showQQ"
        app:layout_constraintStart_toStartOf="@+id/profile_image"
        app:layout_constraintTop_toBottomOf="@+id/profile_image" />

    <Button
        android:id="@+id/button3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/maozhua"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/MyF_switch_" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginBottom="140dp"
        android:text="退出账号"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

</androidx.constraintlayout.widget.ConstraintLayout>
