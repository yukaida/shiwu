<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/MyF_item_imageView"
        android:layout_width="83dp"
        android:layout_height="79dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/MyF_item_textview"
        app:layout_constraintEnd_toStartOf="@+id/MyF_item_textview"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/MyF_item_textview"
        android:layout_width="0dp"
        android:layout_height="77dp"
        android:layout_marginEnd="6dp"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/MyF_item_imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="424dp"
        android:layout_height="2dp"

        android:layout_marginTop="24dp"
        android:background="#66CCFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MyF_item_textview" />

</androidx.constraintlayout.widget.ConstraintLayout>